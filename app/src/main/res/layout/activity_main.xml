<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.mohammedfahadkaleem.bottomnavigation.MainActivity">

  <Button
    android:id="@+id/btn_light_bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/light"/>

  <Button
    android:id="@+id/btn_dark_bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/dark"/>

  <Button
    android:id="@+id/btn_shifting_bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/shifting"/>
  <Button
    android:id="@+id/btn_instagram_bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/instagram"/>

</LinearLayout>
